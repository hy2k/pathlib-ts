{
	"name": "pathlib-ts",
	"type": "module",
	"author": "hy2k",
	"description": "Async-first TypeScript port of CPython's pathlib",
	"repository": {
		"type": "git",
		"url": "https://github.com/hy2k/pathlib-ts"
	},
	"license": "PSF-2.0",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "bun run clean && tsc -p tsconfig.build.json && echo 'Build complete.'",
		"e2e": "./scripts/e2e/run-e2e-all.sh",
		"fix": "biome check --fix",
		"check": "tsc && echo 'tsc ok' && biome check",
		"clean": "rm -rf dist",
		"release": "bun --bun ./scripts/release.ts",
		"prepublishOnly": "bun run build"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.7",
		"@types/bun": "^1.3",
		"@types/node": "^22",
		"typescript": "^5.6.3"
	},
	"version": "0.1.1"
}
